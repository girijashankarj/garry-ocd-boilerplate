{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend Dev Server",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "LOG_LEVEL": "info",
        "DATABASE_URL": "",
        "API_TOKEN": "local-dev-token"
      }
    }
  ]
}
