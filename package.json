{
    "name": "garry-ocd-boilerplate",
    "version": "0.0.0",
    "private": false,
    "bin": {
        "garry-ocd": "bin/cli.js"
    },
    "main": "bin/cli.js",
    "scripts": {
        "start": "node bin/cli.js",
        "test": "jest --runInBand --detectOpenHandles",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "pack:ocd": "npm pack --cache ./tmp/npm-cache",
        "publish:ocd": "npm publish --access public",
        "prepublishOnly": "npm run lint && npm run test"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "enquirer": "^2.3.6",
        "fs-extra": "^11.1.1",
        "minimist": "^1.2.8"
    },
    "devDependencies": {
        "jest": "^29.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testTimeout": 20000
    },
    "files": [
        "bin",
        "docs",
        "templates",
        "utils",
        "README.md",
        "CHANGELOG.md",
        "package.json"
    ],
    "publishConfig": {
        "access": "public"
    }
}
