{
  "name": "garry-ocd-boilerplate",
  "version": "0.0.0",
  "private": false,
  "bin": {
    "garry-ocd": "bin/cli.js"
  },
  "main": "bin/cli.js",
  "scripts": {
    "start": "node bin/cli.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "ci:build": "npm run lint:fix && npm run format:fix && npm run test:coverage && npm run pack:sample",
    "pack:sample": "mkdir -p ./tmp/pack && npm pack --pack-destination ./tmp/pack",
    "publish": "npm publish --access public",
    "prepublishOnly": "npm run lint && npm run test",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "enquirer": "^2.3.6",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-functional": "^4.4.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.0.0"
  },
  "files": [
    "bin",
    "docs",
    "templates",
    "utils",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
